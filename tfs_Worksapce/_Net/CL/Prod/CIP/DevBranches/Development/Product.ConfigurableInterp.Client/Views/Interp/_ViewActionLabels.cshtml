@model Product.ConfigurableInterp.Client.Models.Action


<div class="row">
    <div class="col-lg-12 text-left divActionParams">
        <div class="col-sm-2">
            @Html.DisplayNameFor(model => Model.SelectedResult)
            <br />
            @Html.DropDownListFor(model => Model.SelectedResult, Model.ResultsList, "-- Choose --", new { @id = "SelectedResult_" + Model.StepNumber, @class = "InterpEditDropdown form-control ddlStepResult" })
        </div>
        <div class="col-sm-3">
            @Html.DisplayNameFor(model => Model.SelectedActionType)
            <br />
            @Html.DropDownListFor(model => Model.SelectedActionType, Model.ActionTypesList, "-- Choose --", new { @class = "InterpEditDropdown form-control ddlStepActionType", @id = "SelectedActionType_" + Model.StepNumber, @onchange = "onStepActionTypeChange(this);" })
        </div>
        <div class="col-sm-7">
            @Html.DisplayNameFor(model => Model.SelectedActionName)
            <br />
            <div id="ActionStep_@Html.DisplayTextFor(x => x.StepNumber)_Container_Row_@ViewBag.RowNumber">
                @Html.DropDownListFor(model => Model.SelectedActionName, Enumerable.Empty<SelectListItem>(), "-- Choose--", new { @class = "InterpEditDropdown form-control ddlactions ddlStepActionName", @id = "SelectedActionName_" + Model.StepNumber, @onchange = "OnStepActionNameChange(this);" })
            </div>
        </div>
    </div>
</div>
